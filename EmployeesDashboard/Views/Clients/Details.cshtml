@model EmployeesDashboard.Models.API.Client
@{ ViewData["Title"] = "Client Details Page"; }

<h3>Client @Html.Display("Id")</h3>

<div>
  <div>
    <strong>Id</strong>:
    <span>@Html.Display("Id")</span>
  </div>
  <div>
    <strong>Name</strong>:
    <span>@Html.Display("FirstName") @Html.Display("LastName")</span>
  </div>
  <div>
    <strong>Email</strong>:
    <span>@Html.Display("Email")</span>
  </div>
  <div>
    <strong>Username</strong>:
    <span>@Html.Display("UserName")</span>
  </div>
  <div>
    <strong>National ID</strong>:
    <span>@Html.Display("NationalId")</span>
  </div>
  <div>
    <strong>Created At</strong>:
    <span>@Html.Display("CreatedAt")</span>
  </div>
</div>